<?xml version="1.0" encoding="utf-8"?><androidx.drawerlayout.widget.DrawerLayout        xmlns:android="http://schemas.android.com/apk/res/android"        xmlns:app="http://schemas.android.com/apk/res-auto"        xmlns:tools="http://schemas.android.com/tools"        android:id="@+id/drawer_layout"        android:layout_width="match_parent"        android:layout_height="match_parent"        tools:openDrawer="start">    <androidx.coordinatorlayout.widget.CoordinatorLayout            android:layout_width="match_parent"            android:layout_height="match_parent"            android:background="@color/colorPrimaryDark"            android:theme="@style/AppTheme">        <com.google.android.material.slider.Slider                android:layout_width="300dp"                android:layout_height="wrap_content"                android:layout_marginTop="20dp"                android:layout_gravity="center_horizontal"                android:background="#1F1B24"                android:visibility="gone"                android:elevation="24dp"                android:id="@+id/volumeSlider"                android:valueFrom="0"                android:valueTo="100"                android:stepSize="1"                app:floatingLabel="true"/>        <com.google.android.material.appbar.MaterialToolbar                android:id="@+id/toolbar"                style="@style/TextHighEmphasis"                android:layout_width="match_parent"                android:layout_height="56dp"                android:alpha="0.81"                android:background="#1f1f1f"                android:gravity="start"                android:textSize="20sp"                android:theme="@style/ThemeOverlay.AppCompat.ActionBar"                app:popupTheme="@style/ThemeOverlay.AppCompat.DayNight.ActionBar"                app:title="@string/noDevice"                app:titleTextColor="@color/white"/>        <com.google.android.material.floatingactionbutton.FloatingActionButton                android:id="@+id/buttonDeviceSelect"                android:layout_width="56dp"                android:layout_height="56dp"                android:layout_gravity="bottom|end"                android:layout_marginEnd="16dp"                android:layout_marginBottom="86dp"                android:clickable="true"                android:focusable="true"                android:src="@drawable/round_cast_white_48"                app:backgroundTint="#03DAC5"                app:cornerRadius="10dp"/>        <com.google.android.material.button.MaterialButton                android:id="@+id/buttonSeekBackward"                style="@style/Widget.MaterialComponents.Button.TextButton.Icon"                android:layout_width="80dp"                android:layout_height="80dp"                android:layout_gravity="bottom|start"                android:scaleType="fitCenter"                app:icon="@drawable/round_replay_10_white_48"                app:iconGravity="textStart"                app:iconSize="70dp"/>        <com.google.android.material.button.MaterialButton                android:id="@+id/buttonSeekForward"                style="@style/Widget.MaterialComponents.Button.TextButton.Icon"                android:layout_width="80dp"                android:layout_height="80dp"                android:layout_gravity="bottom|end"                app:cornerRadius="10dp"                app:icon="@drawable/round_forward_10_white_48"                app:iconGravity="textStart"                app:iconSize="70dp"/>        <com.google.android.material.button.MaterialButton                android:id="@+id/buttonPlayPause"                style="@style/Widget.MaterialComponents.Button.TextButton.Icon"                android:layout_width="80dp"                android:layout_height="80dp"                android:layout_gravity="bottom|center_horizontal"                android:gravity="center"                app:cornerRadius="10dp"                app:icon="@drawable/round_play_arrow_white_48"                app:iconGravity="textStart"                app:iconSize="90dp"/>        <androidx.appcompat.widget.AppCompatImageView                android:id="@+id/image"                android:layout_width="300dp"                android:layout_height="300dp"                android:layout_gravity="center"                android:src="@drawable/outline_music_note_24"        />    </androidx.coordinatorlayout.widget.CoordinatorLayout>    <com.google.android.material.navigation.NavigationView            android:id="@+id/nav_view"            android:layout_width="256dp"            android:layout_height="match_parent"            android:layout_gravity="start"            app:headerLayout="@layout/nav_header"            app:menu="@menu/left_menu"/></androidx.drawerlayout.widget.DrawerLayout>